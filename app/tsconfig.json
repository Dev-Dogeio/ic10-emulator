{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "moduleDetection": "force",
        "strict": true,
        "noEmit": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.svelte"]
}
